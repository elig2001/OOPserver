<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="try2.Views.DeviceMenuScreen">
    <ContentPage.Content>
        <StackLayout Spacing="30">
            <Label Text=""/>

            <StackLayout Spacing="10">
                <Button Text="Air Conditioner" HorizontalOptions="Center" 
                        Clicked="ACPressed"/>
                <Button Text="Television" HorizontalOptions="Center"
                        Clicked="TVPressed"/>
                <Button Text="Lights switch" HorizontalOptions="Center"
                        Clicked="LightsPressed"/>
                <Button Text="Door Lock Switch" HorizontalOptions="Center"
                        Clicked="DoorLockPressed"/>
            </StackLayout>

           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>